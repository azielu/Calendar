<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/linear_layout_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/circle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/shape"/>

    <TextView
        android:id="@+id/color_description"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/circle"
        android:layout_toLeftOf="@+id/delete_color"
        android:layout_toRightOf="@+id/circle"
        android:layout_toStartOf="@+id/delete_color"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="\u003Cempty\u003E"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/color_description_edit"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/circle"
        android:layout_toLeftOf="@+id/delete_color"
        android:layout_toRightOf="@+id/circle"
        android:layout_toStartOf="@+id/delete_color"
        android:background="@android:color/transparent"
        android:hint="\u003Cempty\u003E"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/delete_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:width="20dp"
        android:height="20dp"
        android:background="@android:drawable/ic_delete"
        android:padding="10dp"/>

</RelativeLayout>
